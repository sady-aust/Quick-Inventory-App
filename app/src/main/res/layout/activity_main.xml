<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/logoRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:id="@+id/logoID"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signin"


        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="80dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/usrnmPassRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/userNameET"
           android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="  User Name"

            android:textColor="#FFFFFF"
            android:background="@drawable/edittextshape"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:drawableTint="#FFFF"
            android:padding="10dp"
            android:textColorHint="#e6dede"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/passwordET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="  Password"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextshape"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textColorHint="#e6dede"
            android:layout_below="@+id/userNameET"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/forgetpassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/passwordET"
            android:layout_below="@id/passwordET"
            android:text="Forgot Password?"
            android:clickable="true"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/donthvTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/passwordET"
            android:layout_below="@id/passwordET"
            android:text="Don't have an account?"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:clickable="true" />

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/forgetpassTV"
            android:text="Sign In"
            android:textSize="20dp"
            android:textColor="#f2efef"
            android:background="@drawable/buttonshape"
            android:onClick="signIn" />



    </RelativeLayout>




</RelativeLayout>

