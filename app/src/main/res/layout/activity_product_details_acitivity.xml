<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.example.android.quickinventoryapp.ActivityClasses.CustomersDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextshape">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp">

           <TextView
               android:id="@+id/productNameTV"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Product Name "
               android:textColor="#FFF"/>
            <TextView
                android:id="@+id/productNameDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFF"
                android:layout_toRightOf="@id/productNameTV"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/productIDTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product ID        "
                android:textColor="#FFF"
                android:layout_below="@id/productNameTV"/>
            <TextView
                android:id="@+id/productIDDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFF"
                android:layout_toRightOf="@id/productIDTV"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/productNameDetailsTV"/>
            <TextView
                android:id="@+id/quantityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity            "
                android:textColor="#FFF"
                android:layout_below="@id/productIDTV"/>
            <TextView
                android:id="@+id/quantityDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFF"
                android:layout_toRightOf="@id/productIDTV"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/productIDDetailsTV"/>

            <TextView
                android:id="@+id/priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price                   "
                android:textColor="#FFF"
                android:layout_below="@id/quantityDetailsTV"/>
            <TextView
                android:id="@+id/priceDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFF"
                android:layout_toRightOf="@id/priceTV"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/quantityDetailsTV"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:layout_below="@+id/priceTV">
                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonshape"
                    android:text=" Delete this Product "
                    android:textColor="#FFF"

                   />
                <Button
                    android:id="@+id/updateInfoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Info"
                    android:background="@drawable/buttonshape"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:layout_toRightOf="@id/deleteButton"
                    android:layout_marginLeft="25dp"/>


            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
