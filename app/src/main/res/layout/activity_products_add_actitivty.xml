<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quickinventoryapp.ActivityClasses.ProductsAddActitivty"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edittextshape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/productNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Product Name"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/productNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productNameTV"
            android:background="@drawable/box"/>

        <TextView
            android:id="@+id/productsIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Product ID"
            android:layout_marginRight="5dp"
            android:layout_below="@id/productNameTV"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/productIdET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productNameTV"
            android:background="@drawable/box"
            android:layout_below="@id/productNameET"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/quantityLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productsIdTV"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginRight="40dp"
                android:textColor="#FFF"
                android:text="Quantity"/>

            <EditText
                android:id="@+id/quantityET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/box"
                />

            <EditText
                android:id="@+id/unitET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/box"
               />

        </LinearLayout>
        <TextView
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Price"
            android:layout_marginRight="5dp"
            android:layout_below="@id/quantityLL"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/priceET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productNameTV"
            android:background="@drawable/box"
            android:layout_below="@id/quantityLL"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/alertTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Alert me when\nQty is below"
            android:layout_marginRight="5dp"
            android:layout_below="@id/priceTV"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/alertET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productNameTV"
            android:background="@drawable/box"
            android:layout_below="@id/priceTV"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/saveBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/buttonshape"
            android:text="Save"
            android:onClick="saveproduct"
            android:textColor="#ede8e8"
            android:textSize="25dp"
            android:layout_below="@id/alertTV"/>


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
