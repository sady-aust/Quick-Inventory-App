<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

    <TextView
        android:id="@+id/updatepriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Price "
        android:textColor="#fff"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/updatePriceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@id/updatepriceTV"/>
    <TextView
        android:id="@+id/updateQuantityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatepriceTV"
        android:layout_marginTop="35dp"
        android:text="Update Quantity"
        android:textColor="#fff"/>
    <EditText
        android:id="@+id/updateQuantityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:layout_below="@id/updatepriceTV"
        android:layout_toRightOf="@id/updatepriceTV"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"/>
    </RelativeLayout>

</RelativeLayout>
