<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:divider="#3e8161"
    android:dividerHeight="0.9dp"
    android:background="@drawable/history_shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <TextView
        android:id="@+id/dateTVHistory"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#fffafa"

        android:textSize="15dp"/>

    <TextView
        android:id="@+id/customerNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e71a1e"
        android:layout_below="@id/dateTVHistory"
        android:text="Customer Name"
        android:layout_marginRight="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/namesTVHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffafa"
        android:layout_toRightOf="@id/customerNameTV"
        android:layout_below="@id/dateTVHistory"
        android:textSize="15dp"
        android:text=""/>
    <TextView
        android:id="@+id/productNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e71a1e"
        android:layout_below="@id/customerNameTV"
        android:text="Product Name   "
        android:layout_marginRight="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/productTVHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffafa"
        android:layout_below="@id/namesTVHistory"
        android:layout_toRightOf="@id/productNameTV"
        android:textSize="15dp"

        android:text=""/>
    <TextView
        android:id="@+id/priceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e71a1e"
        android:layout_below="@id/productNameTV"
        android:text="Total Price         "
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/totalPriceTVHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffafa"
        android:layout_marginRight="5dp"
        android:layout_below="@id/productTVHistory"
        android:layout_toRightOf="@id/productNameTV"
        android:textSize="15dp"
        android:text=""/>

    </RelativeLayout>
</RelativeLayout>