<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edittextshape"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <TextView
            android:id="@+id/itemNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittextshape"
            android:layout_toRightOf="@id/itemNameTV"
            android:layout_marginLeft="20dp"



         ></Spinner>

        <TextView
            android:id="@+id/DateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNameTV"
            android:layout_marginTop="35dp"
            android:text="Date"
            android:textColor="#FFF"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/dateET"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/item"
            android:background="@drawable/edittextshape"
            android:layout_toRightOf="@id/DateTV"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"
            android:editable="false"
            android:gravity="center"/>

        <TextView
            android:id="@+id/QuantityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DateTV"
            android:layout_marginTop="35dp"
            android:text="Quantity"
            android:textColor="#FFF"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/quantityETSO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/dateET"
            android:background="@drawable/edittextshape"
            android:layout_toRightOf="@id/quantityTV"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="5dp"
            android:inputType="date"
            android:gravity="center"
            android:textColor="#FFF"
            />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true">
           <Button
               android:id="@+id/doneBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="done"
               android:textColor="#FFF"
               android:background="@drawable/buttonshape"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="187dp" />
       </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
