<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/signUpUserNameET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:hint="User Name"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittextshape"
            android:gravity="center"
            android:textColorHint="#e6dede"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/signUpPasswordET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/signUpUserNameET"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextshape"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#e6dede"
            android:gravity="center"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/signUpShopNameET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/signUpPasswordET"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextshape"
            android:hint="Shop Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#e6dede"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/shopOwnerNameET"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/signUpShopNameET"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextshape"
            android:hint="Shop Owner Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#e6dede"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shopOwnerNameET"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textColor="#f2efef"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="10dp"
            android:onClick="addUser"/>

    </RelativeLayout>
</RelativeLayout>
